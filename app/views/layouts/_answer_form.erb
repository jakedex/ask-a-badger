<%= form_for @new_answer, url: {action: "show"}, html: {class: "answer_form"} do |f| %>
  <%= f.trix_editor :body %>
  <%= radio_button_tag(:reply, "text", true) %>
  <%= label_tag(:reply_text, "as text") %>
  <%= radio_button_tag(:reply, "link") %>
  <%= label_tag(:reply_link, "as link") %>
  <%= f.submit "Submit Answer" %>
<% end %>